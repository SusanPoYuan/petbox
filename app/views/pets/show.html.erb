<%= render "common/nav", categories: @categories %>

<br><br><br>

<div class="container">
  <%= render "categories/search_bar", category: @category %>
  <br><br>
  <div class="back-bar">
  <%= link_to("← 回首頁", root_path, class: "underline") %>

  <%= link_to("看更多 #{@pet.category.name} 的工作 →", category_path(@category) , class: "underline pull-right") %>
  </div>
  
  <h2><b><%= @category.name%>領養： </b><%= @pet.title %></h2><br>
  <h4>
    <i class="fa fa-calendar-check-o">建立時間：</i><%= render_time(@pet.created_at) %><br><br>
    <i class="fa fa-map-marker">所在位置：</i><%= @pet.location %>
  </h4>
<br><hr>
<div class="row">
  <div class="col-md-5">
  	<% if @photo.present? %>
   		<%= image_tag(@pet.photo.image.url, class: "thumbnail") %>
   	<% else %>
   		<%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
   	<% end %>
  </div>
  <div class="col-md-5">
    <div style="height:100px;">
      <div class="pet_content">
      <p>
        <b>關於小寵物：</b>
        <br>性別   ：<%= @pet.sexual %>
        <br>年齡   ：<%= @pet.age_years %>年<%= @pet.age_months %>月
        <br>品種   ：<%= @pet.pettype %>
        <br>體型   ：<%= @pet.size %>
        <br>結紮   ：<%= @pet.ligation %>
        <br>其他說明：<%= @pet.description %>
        <br>領養條件：<%= @pet.qualification %>
      <p>
      <p>
        <br><b>聯絡資訊：</b>
        <br><%= @pet.owner_name %>
        <br><%= @pet.phone %>
        <br><%= @pet.email %>
      </p>
    </div>
    </div>
  </div>
</div>