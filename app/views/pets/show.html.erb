
<div class="row">
  <div class="col-md-6">
  	<% if @photo.present? %>
   		<%= image_tag(@pet.photo.image.url, class: "thumbnail") %>
   	<% else %>
   		<%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
   	<% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @pet.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @pet.description %>
      </p>
    </div>
    <div> 位置: <%= @pet.location %> </div>
  </div>
</div>